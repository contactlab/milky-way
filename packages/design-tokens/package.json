{
  "name": "@contactlab/ds-tokens",
  "description": "Named entities that store visual-design info, in order to maintain a scalable, consistent system for UI development.",
  "version": "0.1.0",
  "author": {
    "name": "Contactlab UXD Team",
    "email": "uxd@contactlab.com",
    "homepage": "https://ux.contactlab.com/"
  },
  "contributors": [
    "Carlo Audino <carlo.audino@contactlab.com>",
    "Giovanni Tramutola <giovanni.tramutola@contactlab.com>"
  ],
  "homepage": "https://github.com/contactlab/milky-way#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contactlab/milky-way"
  },
  "engines": {
    "node": ">=10.0",
    "npm": ">=6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "./*.md",
    "LICENSE"
  ],
  "scripts": {
    "setup": "node ./scripts/setup.js",
    "build:css": "postcss ./lib/styles/**/*.pcss --base ./lib/styles --dir ./lib/styles --ext css",
    "build:less": "lessc ./lib/styles/bundle/index.less ./lib/styles/bundle/index.css",
    "build:svg": "svgo --folder ./lib/illustrations/ --output ./lib/illustrations/min/ --disable inlineStyles",
    "build": "run-p -ln build:**",
    "prerelease": "run-s -ln setup build",
    "release": "np --no-yarn",
    "postrelease": "git commit -am \"publish design-tokens and bump its version\" && git push origin master"
  },
  "devDependencies": {
    "@giotramu/postcss-config": "0.1.3",
    "less": "3.9.0",
    "np": "5.0.3",
    "npm-run-all": "4.1.5",
    "shelljs": "0.8.3",
    "svgo": "1.3.0"
  }
}
