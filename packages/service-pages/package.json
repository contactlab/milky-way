{
  "name": "@contactlab/service-pages",
  "version": "3.0.1",
  "description": "The Contactlab Marketing Cloud service pages.",
  "author": {
    "name": "Contactlab UXD Team",
    "email": "uxd@contactlab.com",
    "homepage": "https://ux.contactlab.com"
  },
  "homepage": "https://github.com/contactlab/milky-way#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contactlab/milky-way/tree/master/packages/service-pages"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/*.html"
  ],
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint:css": "stylelint ./src/assets/**/*.scss --ignore-path .gitignore",
    "lint:src": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "lint": "run-p -cln lint:**",
    "dev": "parcel serve ./src/*.pug --port=3333 --cache-dir=.cache/parcel",
    "prebuild": "del-cli ./dist",
    "build": "parcel build ./src/*.pug --cache-dir=.cache/parcel --no-source-maps",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@giotramu/stylelint-config": "8.0.0",
    "@parcel/config-default": "2.0.0",
    "@parcel/transformer-inline-string": "2.0.0",
    "@parcel/transformer-pug": "2.0.0",
    "@parcel/transformer-sass": "2.0.0",
    "@parcel/transformer-typescript-tsc": "2.0.0",
    "del-cli": "4.0.1",
    "eslint-config-contactlab": "7.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint": "7.32.0",
    "npm-run-all": "4.1.5",
    "parcel": "2.0.0",
    "stylelint-scss": "3.21.0",
    "stylelint": "13.13.1",
    "typescript": "4.4.4"
  }
}
