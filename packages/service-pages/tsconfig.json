{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "target": "es6"
  },
  "include": ["src/**/*"]
}
