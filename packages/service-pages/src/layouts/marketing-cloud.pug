- const CLAB_LOGO_CDN = "https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo@3.0.1";
- const CLAB_DS_TOKENS = "https://cdn.jsdelivr.net/npm/@contactlab/ds-tokens@3.1.1";

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Contactlab Marketing Cloud

    link(rel="preconnect", href=CLAB_LOGO_CDN, crossorigin)
    link(rel="preconnect", href=CLAB_DS_TOKENS, crossorigin)

    //--- Favicon
    link(rel="apple-touch-icon", sizes="180x180", href=`${CLAB_LOGO_CDN}/resources/favicon/apple-touch-icon.png`)
    link(rel="icon", type="image/png", sizes="32x32", href=`${CLAB_LOGO_CDN}/resources/favicon/favicon-32.png`)
    link(rel="icon", type="image/png", sizes="16x16", href=`${CLAB_LOGO_CDN}/resources/favicon/favicon-16.png`)

    //--- Color the status bar on mobile devices
    meta(name="theme-color", content="#141414")

    //--- Styles
    link(rel="stylesheet", href=`${CLAB_DS_TOKENS}/css/montserrat.css`)
    link(rel="stylesheet", href=`${CLAB_DS_TOKENS}/css/vars.css`)
    link(rel="stylesheet", href=`${CLAB_DS_TOKENS}/css/common.css`)

  body
    block content

    template#tmpl-it
      .fade-in-left
        if IT_TITLE
          h1 #{IT_TITLE}
        +IT_BODY

    template#tmpl-en
      .fade-in-right
        if EN_TITLE
          h1 #{EN_TITLE}
        +EN_BODY

    .landing
      //--- The Contactlab Marketing Cloud logo
      a(href="http://explore.contactlab.com/", title="Contactlab Marketing Cloud", target="_blank")
        img(src=`${CLAB_LOGO_CDN}/resources/svg/logo-mc-full.svg`, class="logo")

      //--- Artwork
      if IMG_SRC
        .artwork
          img(src= IMG_SRC, alt="Artworks")

      //--- Content
      #locale.content

      //--- Language triggers
      .languages
        button#it.button-lang IT
        button#en.button-lang EN

    script(type="module").
      import './assets/scripts/main.ts';
      import styles from 'bundle-text:./assets/styles/main.scss';
      document.body.insertAdjacentHTML('beforeend', `<style>${styles}</style>`);
