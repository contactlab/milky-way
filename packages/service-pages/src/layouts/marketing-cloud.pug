doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Contactlab Marketing Cloud

    //--- Favicon
    link(rel="apple-touch-icon", sizes="180x180", href="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo@2/resources/favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo@2/resources/favicon/favicon-32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo@2/resources/favicon/favicon-16.png")

    //--- Contactlab Marketing Cloud Logo
    script(type="module", src="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo@2/dist/clab-logo/clab-logo.esm.js")
    script(nomodule="", src="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo@2/dist/clab-logo/clab-logo.js")

    //--- Color the status bar on mobile devices
    meta(name="theme-color", content="#001420")

    //--- Styles
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@contactlab/ds-tokens@2/css/vars.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@contactlab/ds-tokens@2/css/common.css")
    link(rel="stylesheet", href="./assets/styles/main.scss")

  body
    block content

    template#tmpl-it
      .fade-in-left
        if IT_TITLE
          h1 #{IT_TITLE}
        +IT_BODY

    template#tmpl-en
      .fade-in-right
        if EN_TITLE
          h1 #{EN_TITLE}
        +EN_BODY

    .landing
      //--- The Contactlab Marketing Cloud logo
      a(href="http://explore.contactlab.com/" title="Contactlab Marketing Cloud")
        clab-logo.logo

      //--- Artwork
      if IMG_SRC
        .artwork
          img(src= IMG_SRC, alt="Artworks")

      //--- Content
      #locale.content

      //--- Language triggers
      .languages
        a#it.btn-lang.active(href="#", role="button") IT
        a#en.btn-lang(href="#", role="button") EN

    script(src="./assets/scripts/main.ts")
