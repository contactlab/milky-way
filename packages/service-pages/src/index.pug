doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Contactlab Marketing Cloud

    //- color the status bar on mobile devices
    meta(name="theme-color" content="#001420")

    //- add to homescreen for Safari on iOS
    meta(name="application-name" content="Contactlab Marketing Cloud")
    meta(name="apple-mobile-web-app-title" content="Contactlab Marketing Cloud")
    link(rel="mask-icon" href="./assets/favicon/safari-pinned-tab.svg" color="#fff")
    link(rel="apple-touch-icon" sizes="180x180" href="./assets/favicon/apple-touch-icon.png")

    //- favicon
    link(rel="shortcut icon" type="image/png" href="./assets/favicon/favicon.ico")
    link(rel="icon" type="image/png" sizes="16x16" href="./assets/favicon/favicon-16x16.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./assets/favicon/favicon-32x32.png")

    //- styles
    link(rel="stylesheet" href="./styles/main.scss")

    script(src="https://unpkg.com/@contactlab/marketing-cloud-logo@1.2.0/dist/clab-logo.js")

  body
    include views/current.pug

    template#tmpl-it
      .fade-in-left
        if IT_TITLE
          h1 #{IT_TITLE}
        +IT_BODY

    template#tmpl-en
      .fade-in-right
        if EN_TITLE
          h1 #{EN_TITLE}
        +EN_BODY

    .landing
      //- marketing cloud logo
      a(href="https://mc.contactlab.it/" title="Contactlab Marketing Cloud")
        clab-logo.logo

      //- illustrations
      if IMG_SRC
        .illustration
          img(src= IMG_SRC, alt="illustration")

      //- content
      #locale.content

      //- languages
      .languages
        a#it.btn-lang.active(role="button") IT
        a#en.btn-lang(role="button") EN

    script(src="./main.ts")
