doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Contactlab Marketing Cloud

    //--- favicon
    <link rel="apple-touch-icon" sizes="180x180" href="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo/resources/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo/resources/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo/resources/favicon/favicon-16x16.png">

    //--- color the status bar on mobile devices
    meta(name="theme-color" content="#001420")

    //--- styles
    link(rel="stylesheet" href="./styles/main.scss")

    //--- contactlab marketing cloud logo
    script(src="https://cdn.jsdelivr.net/npm/@contactlab/marketing-cloud-logo/dist/clab-logo.js")

  body
    include views/current.pug

    template#tmpl-it
      .fade-in-left
        if IT_TITLE
          h1 #{IT_TITLE}
        +IT_BODY

    template#tmpl-en
      .fade-in-right
        if EN_TITLE
          h1 #{EN_TITLE}
        +EN_BODY

    .landing
      //--- marketing cloud logo
      a(href="https://mc.contactlab.it/" title="Contactlab Marketing Cloud")
        clab-logo.logo

      //--- artwork
      if IMG_SRC
        .artwork
          img(src= IMG_SRC, alt="Artworks")

      //--- content
      #locale.content

      //--- language triggers
      .languages
        a#it.btn-lang.active(href="#", role="button") IT
        a#en.btn-lang(href="#", role="button") EN

    script(src="./main.ts")
