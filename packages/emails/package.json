{
  "private": true,
  "name": "@contactlab/emails",
  "version": "1.7.0",
  "description": "The Contactlab Marketing Cloud transactional emails.",
  "author": {
    "name": "Contactlab UXD Team",
    "email": "uxd@contactlab.com",
    "homepage": "https://ux.contactlab.com"
  },
  "contributors": [
    "Carlo Audino <carlo.audino@contactlab.com>",
    "Giovanni Tramutola <giovanni.tramutola@contactlab.com>"
  ],
  "homepage": "https://github.com/contactlab/milky-way#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contactlab/milky-way/tree/master/packages/emails"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.x",
    "npm": ">=6.x"
  },
  "scripts": {
    "check:src": "tsc --noEmit",
    "lint:src": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint": "run-p -clns lint:**",
    "prebuild": "rimraf ./build",
    "build": "babel ./src --out-dir ./build --extensions .ts,.tsx",
    "watch": "npm run build -- --watch --source-maps inline",
    "preserve": "npm run build",
    "serve": "nodemon --watch ./build ./build/serve.js",
    "dev": "run-p -clns watch serve",
    "pregenerate": "rimraf ./dist && npm run build",
    "generate": "node ./build/generate.js",
    "predeploy": "run-s lint generate",
    "deploy": "netlify deploy --dir ./dist --prod"
  },
  "dependencies": {
    "express": "4.17.1",
    "mjml": "4.7.1",
    "mjml-react": "1.0.59",
    "node-polyglot": "2.4.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/plugin-transform-react-jsx": "7.12.10",
    "@babel/plugin-transform-typescript": "7.12.1",
    "@babel/preset-env": "7.12.10",
    "@babel/preset-react": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@types/express": "4.17.9",
    "@types/mjml-react": "1.0.4",
    "@types/node": "14.14.12",
    "@types/node-polyglot": "2.4.1",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "eslint": "7.15.0",
    "eslint-config-contactlab": "5.0.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-react": "7.21.5",
    "netlify-cli": "2.69.4",
    "nodemon": "2.0.6",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "typescript": "4.1.2"
  }
}
