{
  "version": "independent",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "command": {
    "add": {
      "exact": true
    },
    "version": {
      "allowBranch": ["master"]
    },
    "publish": {
      "ignoreChanges": [
        ".dependabot",
        ".eslintignore",
        ".eslintrc.js",
        ".huskyrc.js",
        ".prettierignore",
        ".prettierrc.js",
        ".stylelintignore",
        ".stylelintrc.js",
        ".vscode",
        "LICENSE",
        "package-lock.json",
        "README.md"
      ]
    }
  }
}
