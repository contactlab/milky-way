{
  "version": "1.7.0",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "command": {
    "add": {
      "exact": true
    },
    "version": {
      "allowBranch": ["stable"],
      "message": "Bumps packages to %s"
    },
    "publish": {
      "ignoreChanges": [
        ".eslintignore",
        ".eslintrc.js",
        ".github/",
        ".huskyrc.js",
        ".prettierignore",
        ".prettierrc.js",
        ".stylelintignore",
        ".stylelintrc.js",
        ".vscode/",
        "LICENSE",
        "README.md"
      ]
    }
  }
}
